{
	"name": "svelte-i18n-lingui",
	"version": "0.3.0",
	"author": "Henry Roes Lie",
	"license": "MIT",
	"description": "Add i18n to Svelte/Sveltekit projects using Lingui, using message as the catalog id",
	"repository": "github:HenryLie/svelte-i18n-lingui",
	"keywords": [
		"svelte",
		"sveltekit",
		"i18n",
		"l10n",
		"lingui",
		"multilingual",
		"translation",
		"internationalization",
		"localization",
		"gettext"
	],
	"scripts": {
		"prepare": "svelte-kit sync",
		"dev": "vite dev",
		"build": "vite build && pnpm package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./jsconfig.json --watch",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"test": "vitest",
		"extract": "lingui extract",
		"compile": "lingui compile --typescript"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./extractor": {
			"types": "./dist/extractor.d.ts",
			"default": "./dist/extractor.js"
		}
	},
	"typesVersions": {
		">4.0": {
			"extractor": [
				"./dist/extractor.d.ts"
			]
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@lingui/cli": ">=4",
		"@lingui/core": ">=4",
		"svelte": ">=4"
	},
	"devDependencies": {
		"@lingui/cli": "^5.9.0",
		"@lingui/conf": "^5.9.0",
		"@lingui/core": "^5.9.0",
		"@sveltejs/adapter-auto": "^3.3.1",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^4.0.4",
		"@testing-library/svelte": "^5.3.1",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.2",
		"eslint-plugin-svelte": "^2.46.1",
		"jsdom": "^22.1.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"publint": "^0.2.12",
		"svelte": "^5.49.1",
		"svelte-check": "^4.3.6",
		"tslib": "^2.8.1",
		"typescript": "^5.9.3",
		"typescript-svelte-plugin": "^0.3.50",
		"vite": "^5.4.21",
		"vitest": "^1.6.1"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"dependencies": {
		"@typescript-eslint/typescript-estree": "^8.54.0",
		"estree-walker-ts": "^1.1.0",
		"js-sha256": "^0.10.1"
	},
	"pnpm.onlyBuiltDependencies": [
		"@sveltejs/kit"
	]
}